{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "start-dev",
        "type": "shell",
        "command": "npm",
        "args": ["run", "dev"],
        "isBackground": true,
        "problemMatcher": {
          "owner": "custom",
          "pattern": [
            {
              "regexp": ".*",
              "file": 1,
              "location": 2,
              "message": 3
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": "starting dev server",
            "endsPattern": "ready in"
          }
        }
      }
    ]
  }